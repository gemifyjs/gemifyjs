<%= form_for(@jem, :html => {:multipart => true}) do |f| %>
  <% if @jem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@jem.errors.count, "error") %> prohibited this jem from being saved:</h2>

      <ul>
      <% @jem.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :base_name, "Javascript name" %><br />
    <%= f.text_field :base_name %>
  </div>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author, :placeholder => "ex. Alan Turing" %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :placeholder => "ex. dennis.ritchie@c.com" %>
  </div>
    <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :placeholder => "Feel free to explain in depth what your script does" %>
  </div>
  <div class="field">
    <%= f.label :summary %><br />
    <%= f.text_area :summary, :placeholder => "Keep it brief" %>
  </div>
  <div class="field">
    <%= f.label :homepage %><br />
    <%= f.text_field :homepage %>
  </div>
  <p>
    <%= f.file_field :js %>
  </p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
